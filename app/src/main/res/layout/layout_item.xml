<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="330dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imgDichVu"
        android:layout_width="190dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/dichvu" />

    <TextView
        android:id="@+id/eTxtTenDichVu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Tên dịch vụ sẽ hiện  ở đây"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/eTxtGiaDichVu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Giá"
        android:textColor="#F81111"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnChonDichVu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/black"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Chọn"
        android:textColor="#F4F6F6" />

</LinearLayout>