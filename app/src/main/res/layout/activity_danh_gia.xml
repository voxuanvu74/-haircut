<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".danhGia">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E3A8A8"
        android:padding="5dp"
        android:text="ĐÁNH GIÁ CHÚNG TÔI"
        android:textAlignment="center"
        android:textColor="#B71C1C"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Reviews"
            android:textAppearance="?android:textAppearanceLarge" />

        <RatingBar
            android:id="@+id/ratingBarShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etxtReviewShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Write Review..."
            android:textAppearance="?android:textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stylist Reviews"
            android:textAppearance="?android:textAppearanceLarge" />

        <RatingBar
            android:id="@+id/ratingBarStylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etxtReviewStylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Write Review..."
            android:textAppearance="?android:textAppearanceMedium" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#976666"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />

</LinearLayout>